extends layout

block content
  h1= title
  p Welcome to the bottle pug
  div(class="container-fluid")
        div(class="row")
            -
                let bottle = results
            each b,index in bottle
                div(class="col-sm-2" onclick=`buy(${index})`) #{b.brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{b.bottlesModel}
                div(class="col-sm-2" onclick=`buy(${index})`) #{b.Quantity}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }
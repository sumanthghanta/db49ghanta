        label.bottleAttr(for='brand') brand 
        input#brand(type='text', name='brand')
    div.form-group
        label.bottleAttr(for='bottlesModel') bottlesModel
        input#bottlesModel(type='text', name='bottlesModel')
    div.form-group
        label.bottleAttr(for='Quantity')  Quantity
        input#Quantity(type='number', name='Quantity')
    input(type="submit")
 
  script.
